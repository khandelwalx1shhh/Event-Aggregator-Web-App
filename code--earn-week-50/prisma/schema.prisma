datasource db {
      provider = "mongodb"
      url      = env("DATABASE_URL")
    }
    
    generator client {
      provider = "prisma-client-js"
    }
    
    model Event {
      id          String   @id @default(auto()) @map("_id") @db.ObjectId
      name        String
      description String
      date        DateTime
      location    String
      eventType   String
      collegeName String
      link        String
      createdAt   DateTime @default(now())
      updatedAt   DateTime @updatedAt
    }